<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/loginbg" >
        </ImageView>

        <LinearLayout
            android:id="@+id/linLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"
                android:background="@color/transparent" >
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/loginTextViewMarginLeft"
                android:layout_marginRight="@dimen/loginTextViewMarginLeft"
                android:layout_marginTop="@dimen/uploadPadding"
                android:layout_weight="0.72"
                android:background="@drawable/border_gray_trans" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@drawable/border_fill_with_gray_signup"
                    android:gravity="bottom" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/uploadPadding"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".3"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".01"
                        android:background="@color/transparent" >
                    </View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/uploadPadding"
                        android:layout_weight=".58" >

                        <LinearLayout
                            android:id="@+id/toplinLayName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <View
                                android:id="@+id/view1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".05"
                                android:background="@color/transparent" >
                            </View>

                            <LinearLayout
                                android:id="@+id/linLayName"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".175"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:scaleType="centerInside" >

                                <com.constants.CustomEditText
                                    android:id="@+id/userNameEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:background="#00000000"
                                    android:drawableLeft="@drawable/user_name_icon"
                                    android:drawablePadding="20dp"
                                    android:ems="10"
                                    android:gravity="center_vertical"
                                    android:hint="User Name"
                                    android:paddingLeft="@dimen/textNormal"
                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/whiteColor"
                                    android:textColorHint="@color/whiteColor"
                                    android:textCursorDrawable="@null"
                                    font:customFontet="lvnm.ttf" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray" >
                            </View>

                            <LinearLayout
                                android:id="@+id/linLayPass"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/uploadPadding"
                                android:layout_weight=".175"
                                android:background="@color/transparent"
                                android:scaleType="centerInside" >

                                <com.constants.CustomEditText
                                    android:id="@+id/passwordEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="#00000000"
                                    android:drawableLeft="@drawable/password_icon"
                                    android:drawablePadding="20dp"
                                    android:ems="10"
                                    android:padding="5dp"
                                    android:hint="Password"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/textNormal"
                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/whiteColor"
                                    android:textColorHint="@color/whiteColor"
                                    android:textCursorDrawable="@null"
                                    font:customFontet="lvnm.ttf" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray" >
                            </View>

                            <View
                                android:id="@+id/viewn"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".1"
                                android:background="@color/transparent" >
                            </View>

                            <com.constants.CustomButton
                                android:id="@+id/loginButton"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".15"
                                android:background="@color/headerRed"
                                android:text="Log In"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/whiteColor"
                                font:customFontbtn="lvnm.ttf" />

                            <View
                                android:id="@+id/viewn3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.03"
                                android:background="@color/transparent" >
                            </View>

                            <!-- <com.constants.CustomButton -->
                            <!-- android:id="@+id/signUpButton" -->
                            <!-- android:layout_width="match_parent" -->
                            <!-- android:layout_height="0dp" -->
                            <!-- android:layout_gravity="center_horizontal" -->
                            <!-- android:layout_weight=".15" -->
                            <!-- android:background="@color/headerRed" -->
                            <!-- android:text="Sign Up" -->
                            <!-- android:textAppearance="?android:attr/textAppearanceMedium" -->
                            <!-- android:textColor="@color/whiteColor" -->
                            <!-- font:customFontbtn="lvnm.ttf" /> -->

                            <LinearLayout
                                android:id="@+id/linLayFbLog"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/uploadPadding"
                                android:layout_weight=".15"
                                android:gravity="center" >

                                <com.constants.CustomTextView
                                    android:id="@+id/loginFacebook"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/facebook"
                                    android:drawablePadding="@dimen/uploadPadding"
                                    android:gravity="center"
                                    android:onClick="onLoginClick"
                                    android:singleLine="true"
                                    android:text="Login with Facebook"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    font:customFonttv="lvnm.ttf" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".018"
                                android:background="@color/transparent" />

                            <LinearLayout
                                android:id="@+id/linLayForgotPas"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".08"
                                android:gravity="center" >

                                <com.constants.CustomTextView
                                    android:id="@+id/forgotPasTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="Forgot Password?"
                                    android:textColor="@color/whiteColor"
                                    font:customFonttv="lvnm.ttf" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view5"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".042"
                                android:background="@color/transparent" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="@color/transparent" />

            <!-- <LinearLayout -->
            <!-- android:id="@+id/linLayFbLog" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="0dp" -->
            <!-- android:layout_marginTop="@dimen/uploadPadding" -->
            <!-- android:layout_weight=".08" -->
            <!-- android:gravity="center" > -->


            <!-- <com.constants.CustomTextView -->
            <!-- android:id="@+id/loginFacebook" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:drawableLeft="@drawable/facebook" -->
            <!-- android:drawablePadding="@dimen/uploadPadding" -->
            <!-- android:gravity="center" -->
            <!-- android:onClick="onLoginClick" -->
            <!-- android:singleLine="true" -->
            <!-- android:text="Login with Facebook" -->
            <!-- android:textColor="#ffffff" -->
            <!-- android:textStyle="bold" -->
            <!-- font:customFonttv="lvnm.ttf" /> -->
            <!-- </LinearLayout> -->
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>