<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stylist.BuyTokenActivity" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/graydivider" />

            <LinearLayout
                android:id="@+id/linearLayout_topCent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/line2"
                android:layout_below="@+id/line1"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="6dp" >

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Add Balance using "
                    android:textSize="14dp"
                    font:customFonttv="lvnm.ttf" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:src="@drawable/payu" />

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/graydivider"
                    font:customFonttv="lvnm.ttf" />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/linearLayout_balance"
                android:background="@color/graydivider" />

            <LinearLayout
                android:id="@+id/linearLayout_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:padding="@dimen/uploadPadding"
                android:weightSum="1" >

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Current Balance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                  
                    font:customFonttv="lvnm.ttf" />

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:text="5 token"
                    android:paddingTop="@dimen/uploadPadding"
                    android:paddingBottom="@dimen/uploadPadding"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="17dp"
                    font:customFonttv="lvnm.ttf" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/graydivider" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#eeeeee"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout_bottomTextLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1" >

                    <View
                        android:id="@+id/line11"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight=".3"
                        android:background="#cccccc" />

                    <com.constants.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:text="Add Money"
                        android:textSize="14dp"
                        font:customFonttv="lvnm.ttf" />

                    <View
                        android:id="@+id/line12"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight=".3"
                        android:background="#cccccc" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_bottomEts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <com.constants.CustomTextView
                        android:id="@+id/two_token"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:text="2 token"
                        android:textSize="14dp"
                        android:background="@drawable/black_border_white_back"
                        font:customFonttv="lvnm.ttf" />

                    <com.constants.CustomTextView
                        android:id="@+id/five_token"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".33"
                        android:gravity="center"
                          android:layout_marginLeft="10dp"
                        android:text="5 token"
                        android:textSize="14dp"
                           android:background="@drawable/black_border_white_back"
                        font:customFonttv="lvnm.ttf" />

                    <com.constants.CustomTextView
                        android:id="@+id/ten_token"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".33"
                        android:gravity="center"
                          android:layout_marginLeft="10dp"
                        android:text="10 token"
                        android:textSize="14dp"
                           android:background="@drawable/black_border_white_back"
                        font:customFonttv="lvnm.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <com.constants.CustomTextView
                    android:id="@+id/editText_amountBet"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/black_border_white_back"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14dp"
                    android:text="200 Rs"                   
                    font:customFontet="lvnm.ttf" >

                </com.constants.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/promockeckbox"
                    android:paddingLeft="5dp"
                    android:text="Have a Promo Code ?"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
           <include layout="@layout/bottom_bar" />
    </LinearLayout>

</LinearLayout>