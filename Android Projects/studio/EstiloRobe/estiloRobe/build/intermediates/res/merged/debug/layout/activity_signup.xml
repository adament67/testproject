    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_standing_girl"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <LinearLayout
