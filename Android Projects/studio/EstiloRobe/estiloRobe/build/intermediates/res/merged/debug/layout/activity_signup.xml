                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.17" >

                            <com.constants.CustomTextView
                                android:id="@+id/referral"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="#00000000"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/textNormal"                                                         
                                android:singleLine="true"
                                android:text="Got referral code"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/whiteColor"
                                font:customFonttv="lvnm.ttf" />

                            <com.constants.CustomEditText
                                android:id="@+id/referralEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                  android:layout_gravity="center"
                                android:background="#00000000"
                                android:gravity="center_vertical"
                                android:hint="Enter Referral Code (Optional)"
                                android:paddingLeft="@dimen/textNormal"
                               android:inputType="textCapCharacters"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/whiteColor"
                                android:textColorHint="@color/whiteColor"
                                android:visibility="gone"
                                font:customFontet="lvnm.ttf" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                           
