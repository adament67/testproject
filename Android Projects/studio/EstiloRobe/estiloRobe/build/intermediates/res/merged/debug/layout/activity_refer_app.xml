
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
      xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stylist.ReferAppActivity"
    tools:ignore="MergeRootFrame"
  
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
         >

       

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/text_iew_offerDes"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/offer_coupons" />

        <com.constants.CustomTextView
            android:id="@+id/text_iew_offerDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            font:customFonttv="lvnm.ttf"
            android:text="Get Five Token \n Share your Referral code now !"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grayTextColor"
             />

       <com.constants.CustomTextView
           android:id="@+id/refer"
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_iew_offerDes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="DKD123"
              font:customFonttv="lvnm.ttf"
            android:textAllCaps="true"
            android:textColor="@color/grayTextColor"
           android:textAppearance="?android:attr/textAppearanceMedium" 
           />

      
    
    </RelativeLayout>
          <include
 
               layout="@layout/bottom_bar" />
</LinearLayout>