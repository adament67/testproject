<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/whiteColor"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical" >



                <com.constants.CustomTextView
                    android:id="@+id/topText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="bottom"
                    android:background="@color/headerRed"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:text="Description"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textNormal"
                    font:customFonttv="lvnm.ttf" >
                </com.constants.CustomTextView>
                 <EditText
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@color/whiteColor"
                    android:hint="Name of the Look"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/textNormal" />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@color/gray" />


                <EditText
                    android:id="@+id/ocassionText"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@color/whiteColor"
                    android:hint="Occasion"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/textNormal" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@color/gray" />


                <EditText
                    android:id="@+id/commentsText"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@color/whiteColor"
                    android:hint="Comments"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/textNormal"
                     />



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:gravity="center_vertical" >

                <com.constants.CustomTextView
                    android:id="@+id/bottomText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/headerRed"
                    android:gravity="center"
                    android:text="View All"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textNormal"
                    font:customFonttv="lvnm.ttf" >
                </com.constants.CustomTextView>
            </LinearLayout>
            <!--
            <LinearLayout
                android:id="@+id/relativeLayoutbuttons"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ed394c"
                android:clickable="false"
                android:focusable="false" >

                <TextView
                    android:id="@+id/uploadText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textNormal" >
                </TextView>
            </LinearLayout>


            <include layout="@layout/bottom_bar" />
            -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>