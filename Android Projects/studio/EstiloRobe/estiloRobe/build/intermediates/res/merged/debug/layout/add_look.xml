    tools:context="com.stylist.UploadWardrobeWithDescriptionPop"
    tools:ignore="MergeRootFrame" >
 <include layout="@layout/header" />
    <RelativeLayout
        android:id="@+id/upprlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" >

        <com.constants.CustomTextView
            android:id="@+id/addLook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Add a Look"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/headerRed"
            font:customFonttv="lvnm.ttf" />

        <ImageView 
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>

