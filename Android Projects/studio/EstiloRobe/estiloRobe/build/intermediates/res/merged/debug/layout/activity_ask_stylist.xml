<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AskStylistActivity" >

    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/linTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/imageRelLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/whiteColor"
            android:layout_weight="0.95"
            android:orientation="vertical" >

        

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:orientation="vertical" >

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasion and time of wearing *"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    font:customFonttv="lvnm.ttf" />

                <com.constants.CustomEditText
                    android:id="@+id/occasion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:hint="Enter occasion and time of wearing"
                    android:inputType="textCapWords"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    font:customFontet="lvnm.ttf" >
                </com.constants.CustomEditText>
            </LinearLayout>
<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graydivider" />
            
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:orientation="vertical" >

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Preferred Style"
                    android:textColor="@android:color/black"
                    font:customFonttv="lvnm.ttf" />

                <com.constants.CustomEditText
                    android:id="@+id/preferredStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:lines="2"
                    android:ems="10"
                    android:hint="eg: indian,western etc"
                    android:inputType="textCapWords"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    font:customFontet="lvnm.ttf" >
                </com.constants.CustomEditText>
            </LinearLayout>
           <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graydivider" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical" >

                <com.constants.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anything you are not comfortable wearing (in particular)"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    font:customFonttv="lvnm.ttf" />

                <com.constants.CustomEditText
                    android:id="@+id/notComfort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:hint="Enter uncomfortable wearing"
                    android:inputType="textCapWords"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    font:customFontet="lvnm.ttf" >
                </com.constants.CustomEditText>
            </LinearLayout>
<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graydivider" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/profile_recbd"
                android:orientation="vertical" >

                <com.constants.CustomTextView
                    android:id="@+id/dotted1_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_dp"
                    android:lines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:singleLine="true"
                    android:text="Write your query *"
                    font:customFonttv="lvnm.ttf" />

                <com.constants.CustomEditText
                    android:id="@+id/n_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor"
                    font:customFontet="lvnm.ttf" >

                    <requestFocus />
                </com.constants.CustomEditText>

            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/bottom_bar" />
    </LinearLayout>

</LinearLayout>