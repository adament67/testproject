<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:background="@color/whiteColor"
        android:gravity="bottom"
        android:orientation="vertical" >

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:gravity="center_vertical" >

            <com.constants.CustomTextView
                android:id="@+id/topText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@color/headerRed"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="Description"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textNormal"
                font:customFonttv="lvnm.ttf" >
            </com.constants.CustomTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:gravity="center_vertical" >

                <com.constants.CustomTextView
                    android:id="@+id/categoryText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/whiteColor"
                    android:gravity="center_vertical"
                    android:hint="Select Category"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/redish_text_color"
                    android:textColorHint="@color/redish_text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/textNormal"
                    font:customFonttv="lvnm.ttf" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@color/graydivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:gravity="center_vertical" >

            <com.constants.CustomEditText
                android:id="@+id/brandText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteColor"
                android:hint="Brand"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:paddingLeft="@dimen/ten_dp"
                android:singleLine="true"
                android:textColor="@color/headenewRed"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/textNormal"
                font:customFontet="lvnm.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@color/graydivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:gravity="center_vertical" >

            <com.constants.CustomEditText
                android:id="@+id/costText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteColor"
                android:hint="Cost"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:paddingLeft="@dimen/ten_dp"
                android:singleLine="true"
                android:textColor="@color/headenewRed"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/textNormal"
                font:customFontet="lvnm.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@color/graydivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:gravity="center_vertical" >

            <com.constants.CustomEditText
                android:id="@+id/commentsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteColor"
                android:hint="Comments"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:paddingLeft="@dimen/ten_dp"
                android:singleLine="true"
                android:textColor="@color/headenewRed"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/textNormal"
                font:customFontet="lvnm.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@color/graydivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:gravity="center_vertical" >

            <com.constants.CustomTextView
                android:id="@+id/bottomText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@color/headerRed"
                android:gravity="center"
                android:text="View All"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textNormal"
                font:customFonttv="lvnm.ttf" >
            </com.constants.CustomTextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>