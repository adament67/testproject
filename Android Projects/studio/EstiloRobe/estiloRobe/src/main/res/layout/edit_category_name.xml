<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:id="@+id/newCategoryTopLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border_white_dotted_line"
        android:orientation="vertical" >

        <com.constants.CustomTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Change Category Name"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/textHeading"
            font:customFonttv="lvnm.ttf" />

        <com.constants.CustomEditText
            android:id="@+id/category_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border_red_small_but"
            android:padding="15dp"
            android:textColor="@color/whiteColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/textNormal"
            font:customFontet="lvnm.ttf" >

            <requestFocus />
        </com.constants.CustomEditText>

        <com.constants.CustomEditText
            android:id="@+id/colour_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border_red_small_but"
            android:hint="Colour"
            android:lines="1"
            android:padding="10dp"
            android:textColor="@color/whiteColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/textNormal"
            android:visibility="gone"
            font:customFontet="lvnm.ttf" >
        </com.constants.CustomEditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <com.constants.CustomTextView
                android:id="@+id/changeBut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/whiteColor"
                android:gravity="center"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@color/headerRed"
                android:textSize="@dimen/textHeading"
                font:customFonttv="lvnm.ttf" />

            <com.constants.CustomTextView
                android:id="@+id/cancelBut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/whiteColor"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancel"
                android:textColor="@color/headerRed"
                android:textSize="@dimen/textHeading"
                font:customFonttv="lvnm.ttf" />

            <!--
                <com.constants.CustomButton
                    android:id="@+id/changeBut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:text="Save"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/headerRed"
                    font:customFontbtn="lvnm.ttf" />

                <com.constants.CustomButton
                    android:id="@+id/cancelBut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:text="Cancel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/headerRed"
                    font:customFontbtn="lvnm.ttf" />
            -->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>