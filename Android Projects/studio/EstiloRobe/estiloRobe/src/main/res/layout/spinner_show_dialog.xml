<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="50dp" >

    <com.constants.CustomTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redish_text_color"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Please Select Height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/whiteColor"
        font:customFonttv="lvnm.ttf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButton"
        android:layout_below="@+id/title"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteColor" >

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <com.constants.CustomTextView
                android:id="@+id/feet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawablePadding="10dip"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="Feet"
                android:textColor="#000000"
                font:customFonttv="lvnm.ttf" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#aaa" />

            <ListView
                android:id="@+id/listView_dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_bar"
                android:layout_gravity="center_horizontal" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_bar1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <com.constants.CustomTextView
                android:id="@+id/inch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawablePadding="10dip"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="Inches"
                android:textColor="#000000"
                font:customFonttv="lvnm.ttf" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#aaa" />

            <ListView
                android:id="@+id/listView_dialog1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_bar"
                android:layout_gravity="center_horizontal" >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <com.constants.CustomTextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/redish_text_color"
            android:gravity="center"
            android:text="Ok"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor"
            font:customFonttv="lvnm.ttf" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/whiteColor" />

        <com.constants.CustomTextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/redish_text_color"
            android:gravity="center"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor"
            font:customFonttv="lvnm.ttf" />

   </LinearLayout>

</RelativeLayout>