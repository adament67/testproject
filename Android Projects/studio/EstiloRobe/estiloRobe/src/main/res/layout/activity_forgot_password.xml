<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayout1"
    android:background="@drawable/forgotpasswordbg"
    android:orientation="vertical"
    tools:context="com.stylist.ForgotPasswordActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/loginTextViewMarginLeft"
        android:layout_marginRight="@dimen/loginTextViewMarginLeft"
        android:layout_marginTop="@dimen/uploadPadding"
        android:layout_weight="0.7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/gray"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_gray_trans"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/uploadPadding"
                android:layout_weight="0.4"
                android:src="@drawable/icon" />

            <LinearLayout
                android:id="@+id/toplinLayName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.6"
                android:orientation="vertical" >

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:background="@color/transparent" >
                </View>

                <LinearLayout
                    android:id="@+id/linLayName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".24"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/textNormal"
                    android:paddingRight="@dimen/textNormal"
                    android:scaleType="centerInside" >

                    <com.constants.CustomEditText
                        android:id="@+id/userNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/email_icon"
                        android:drawablePadding="20dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Email Id"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/whiteColor"
                        android:textCursorDrawable="@null"
                        font:customFontet="lvnm.ttf" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" >
                </View>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:background="@color/transparent" >
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:background="@color/headerRed"
                    android:gravity="center" >

                    <com.constants.CustomButton
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/headerRed"
                        android:text="Reset Password"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whiteColor"
                        font:customFontbtn="lvnm.ttf" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:background="@color/transparent" >
                </View>

                <LinearLayout
                    android:id="@+id/linLayLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal" >

                    <com.constants.CustomTextView
                        android:id="@+id/loginFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Back to "
                        android:textColor="#ffffff"
                        font:customFonttv="lvnm.ttf" />

                    <com.constants.CustomTextView
                        android:id="@+id/loginAlready"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="LOGIN"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        font:customFonttv="lvnm.ttf" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:background="@color/transparent" >
                </View>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/transparent" >
    </View>

</LinearLayout>