<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context="com.stylist.UploadWishListDescriptionActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/whiteColor"
            android:gravity="bottom"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dashed_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:gravity="center_vertical" >

             

                <Spinner
                    android:id="@+id/categoryList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_trans"
                    android:gravity="left"
                    android:lines="1"
                    android:textSize="@dimen/textNormal" />
            </LinearLayout>                -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:gravity="center_vertical" >

                    <com.constants.CustomEditText
                        android:id="@+id/ocassion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/whiteColor"
                        android:hint="Ocassion"
                        android:inputType="textCapWords"
                        android:lines="1"
                        android:paddingLeft="@dimen/ten_dp"
                        android:singleLine="true"
                        android:textColor="@color/headenewRed"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/textNormal"
                        font:customFontet="lvnm.ttf" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:background="@color/graydivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:gravity="center_vertical" >

                    <com.constants.CustomTextView
                        android:id="@+id/datetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/whiteColor"
                        android:gravity="center_vertical"
                        android:hint="Date &amp; Time"
                        android:paddingLeft="@dimen/ten_dp"
                        android:singleLine="true"
                        android:textColor="@color/headenewRed"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/textNormal"
                        font:customFonttv="lvnm.ttf" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:background="@color/graydivider" />

                <!--
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:gravity="center_vertical" >

                <com.constants.CustomEditText
                    android:id="@+id/commentsText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/whiteColor"
                    android:hint="Comments"
                    android:inputType="textCapWords"
                    android:lines="1"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/headenewRed"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/textNormal"
                    font:customFontet="lvnm.ttf" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="@color/transparent" />
