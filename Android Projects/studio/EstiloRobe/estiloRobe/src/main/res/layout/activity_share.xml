<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.stylist"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="com.stylist.ShareActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/uploadRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/uploadLinearLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/whiteColor"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <com.constants.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graydivider"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Share image using"
                android:textColor="@color/grayTextColor"
                font:customFonttv="lvnm.ttf" />

            <com.constants.CustomTextView
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/whataapp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="13dp"
                android:text="Whatsapp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grayTextColor"
                font:customFonttv="lvnm.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <com.constants.CustomTextView
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/fb"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="13dp"
                android:text="Facebook"
                android:textColor="@color/grayTextColor"
                font:customFonttv="lvnm.ttf" />

          <!--   <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <com.constants.CustomTextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="@dimen/ten_dp"
                android:text="Email"
                android:textColor="@color/grayTextColor"
                font:customFonttv="lvnm.ttf" /> -->

        </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>