<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item><layer-list>
        <item><shape>
                <gradient android:angle="90" android:endColor="#ed394c" android:startColor="#ed394c" android:type="linear" />

                <stroke android:width="1dp" android:color="#ffffff" />

                <corners android:radius="25dp" />

                <padding android:bottom="3dp" android:left="2dp" android:right="2dp" android:top="3dp" />
            </shape></item>
        <item
            android:right="10dp"
             >
            
            <bitmap android:gravity="center|right" android:src="@drawable/down_arrow1" />   <!-- // you can use any other image here, instead of default_holo_dark_am -->
      
        </item>
      </layer-list></item>

 </selector>  